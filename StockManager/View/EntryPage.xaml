<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            x:Class="StockManager.View.EntryPage1"
            Title="Edit Mode">

    
    <ContentPage.Content>
        <StackLayout Padding="5,10">
            
            <Label Text="変更内容を有効にするには SAVE をタップする。" TextColor="Orange" FontAttributes="Bold" />
            <ScrollView VerticalOptions="StartAndExpand">
                <StackLayout>
                    <Label  x:Name="index"  TextColor="Gray" FontSize="15" FontAttributes="Bold"/>
                    <Entry  x:Name="code" Placeholder="Code"  />
                    <Entry  x:Name="stock" Placeholder="Stock" />
                    <Entry  x:Name="price" Placeholder="Price" />
                   
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>