<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            x:Class="StockManager.View.EntryPage1"
            Title="Edit Mode">

    
    <ContentPage.Content>
        <StackLayout Padding="5,10">
            
            <Label Text="Unlike the Editor, the Entry view supports more advanced formatting and customization." />
            <ScrollView VerticalOptions="StartAndExpand">
                <StackLayout>
                    <Entry  x:Name="index" Placeholder="Index" TextChanged="Entry_TextChanged" Keyboard="Numeric"  />
                    <Entry  x:Name="code" Placeholder="Code"  />
                    <Entry  x:Name="stock" Placeholder="Stock" />
                    <Entry  x:Name="price" Placeholder="Price" />
                    <Entry Placeholder="Placeholder text" />
                    <Entry IsEnabled="false" Text="This is a disabled entry" />
                    <Entry TextColor="#77d065" Text="This is an entry with a textcolor specified" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>